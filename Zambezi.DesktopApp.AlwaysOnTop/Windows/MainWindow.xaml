<Window x:Class="Zambezi.DesktopApp.AlwaysOnTop.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Always on Top" Height="350" Width="525" Topmost="True" ShowInTaskbar="True" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView HorizontalAlignment="Stretch" VerticalAlignment="Stretch"   Margin="10" Grid.Row="0" Grid.Column="0" >
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="5" HorizontalAlignment="Right">
            <Button Name="makeTop" Margin="5" Width="100" >Make Top</Button>
            <Button Name="makeUnTop" Margin="5" Width="100" >Un-Top</Button>
            <Button Name="Close" Margin="5" Width="100" Click="Close_Click" >Close</Button>
        </StackPanel>
    </Grid>
</Window>
